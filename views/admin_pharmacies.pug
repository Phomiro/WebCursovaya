extends layout

block content
    .admin-pharmacies
        h1 Список аптек
        a.button(href='/admin/pharmacies/new') Добавить аптеку
        table
            thead
                tr
                    th ID
                    th Название
                    th Адрес
                    th Доступные товары (JSON)
                    th Действия
            tbody
                each p in pharmacies
                    tr
                        td= p.PharmacyID
                        td= p.Название
                        td= p.Адрес
                        td= p.Доступные_товары
                        td
                            a.button(href=`/admin/pharmacies/${p.PharmacyID}/edit`) Редактировать
                            form(method='POST', action=`/admin/pharmacies/${p.PharmacyID}/delete`, style='display:inline')
                                button(type='submit', onclick='return confirm("Удалить аптеку?")') Удалить 

block styles
    style.
        .admin-pharmacies {
            max-width: 1000px;
            margin: 2rem auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            padding: 2rem 2.5rem 2.5rem 2.5rem;
        }
        .admin-pharmacies h1 {
            color: #27ae60;
            margin-bottom: 2rem;
            font-size: 2.2rem;
        }
        .admin-pharmacies table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
            background: #fafbfc;
        }
        .admin-pharmacies th, .admin-pharmacies td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e5e7eb;
            text-align: left;
        }
        .admin-pharmacies th {
            background: #eafaf1;
            color: #27ae60;
            font-weight: 600;
        }
        .admin-pharmacies tr:hover {
            background: #f0f4fa;
        }
        .admin-pharmacies .button {
            display: inline-block;
            background: #27ae60;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.2rem;
            margin-right: 0.5rem;
            font-size: 1rem;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.2s;
        }
        .admin-pharmacies .button:hover {
            background: #219150;
        }
        .admin-pharmacies form {
            display: inline;
        } 