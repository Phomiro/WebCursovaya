extends layout

block content
    .admin-product-form
        h1= product.ProductID ? 'Редактировать товар' : 'Добавить товар'
        form(method='POST', action=formAction)
            label(for='Название') Название
            input(type='text', name='Название', id='Название', required, value=product.Название || '')
            label(for='Описание') Описание
            textarea(name='Описание', id='Описание')= product.Описание || ''
            label(for='Цена') Цена
            input(type='number', name='Цена', id='Цена', required, step='0.01', value=product.Цена || '')
            label(for='Вид_товара') Вид товара
            input(type='text', name='Вид_товара', id='Вид_товара', required, value=product.Вид_товара || '')
            label(for='Производитель') Производитель
            input(type='text', name='Производитель', id='Производитель', value=product.Производитель || '')
            label(for='Дозировка') Дозировка
            input(type='text', name='Дозировка', id='Дозировка', value=product.Дозировка || '')
            label(for='Наличие') В наличии
            input(type='checkbox', name='Наличие', id='Наличие', checked=product.Наличие)
            button.button(type='submit') Сохранить
            a.button(href='/admin/products') Отмена 

block styles
    style.
        .admin-product-form {
            max-width: 500px;
            margin: 2.5rem auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            padding: 2.5rem 2rem 2rem 2rem;
        }
        .admin-product-form h1 {
            color: #27ae60;
            margin-bottom: 2rem;
            font-size: 2rem;
        }
        .admin-product-form form {
            display: flex;
            flex-direction: column;
            gap: 1.1rem;
        }
        .admin-product-form label {
            font-weight: 500;
            color: #27ae60;
            margin-bottom: 0.2rem;
        }
        .admin-product-form input, .admin-product-form select, .admin-product-form textarea {
            padding: 0.6rem 0.9rem;
            border: 1px solid #cfd8dc;
            border-radius: 6px;
            font-size: 1rem;
            background: #f7fafc;
            margin-bottom: 0.2rem;
        }
        .admin-product-form .button {
            background: #27ae60;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.6rem 1.3rem;
            font-size: 1rem;
            cursor: pointer;
            margin-right: 0.7rem;
            margin-top: 0.5rem;
            text-decoration: none;
            transition: background 0.2s;
        }
        .admin-product-form .button:hover {
            background: #219150;
        } 