extends layout

block content
    .admin-users
        h1 Список пользователей
        a.button(href='/admin/users/new') Добавить пользователя
        table
            thead
                tr
                    th ID
                    th ФИО
                    th Email
                    th Роль
                    th Действия
            tbody
                each u in users
                    tr
                        td= u.UserID
                        td= u.ФИО
                        td= u.Email
                        td= u.Роль
                        td
                            a.button(href=`/admin/users/${u.UserID}/edit`) Редактировать
                            form(method='POST', action=`/admin/users/${u.UserID}/delete`, style='display:inline')
                                button(type='submit', onclick='return confirm("Удалить пользователя?")') Удалить 

block styles
    style.
        .admin-users {
            max-width: 900px;
            margin: 2rem auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            padding: 2rem 2.5rem 2.5rem 2.5rem;
        }
        .admin-users h1 {
            color: #27ae60;
            margin-bottom: 2rem;
            font-size: 2.2rem;
        }
        .admin-users table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
            background: #fafbfc;
        }
        .admin-users th, .admin-users td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e5e7eb;
            text-align: left;
        }
        .admin-users th {
            background: #eafaf1;
            color: #27ae60;
            font-weight: 600;
        }
        .admin-users tr:hover {
            background: #f0f4fa;
        }
        .admin-users .button {
            display: inline-block;
            background: #27ae60;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1.2rem;
            margin-right: 0.5rem;
            font-size: 1rem;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.2s;
        }
        .admin-users .button:hover {
            background: #219150;
        }
        .admin-users form {
            display: inline;
        } 